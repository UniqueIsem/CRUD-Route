<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".more.ExplorePage"
    android:background="@color/lightGray">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXPLORE"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:columnCount="2"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="20pt"
        android:layout_marginBottom="30pt"
        android:columnOrderPreserved="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardInclination"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:onClick="onCardClick"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:foreground="?selectableItemBackground"
            android:backgroundTint="@color/darkRed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50pt"
                    android:layout_height="50pt"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/inclinacion"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="Inclination"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMechanics"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:onClick="onCardClick"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:foreground="?selectableItemBackground"
            android:backgroundTint="@color/darkRed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50pt"
                    android:layout_height="50pt"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/toolwhite"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="Mechanics"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:onClick="onCardClick"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:foreground="?selectableItemBackground"
            android:backgroundTint="@color/darkRed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50pt"
                    android:layout_height="50pt"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/riding"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:text="Info"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardExit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:onClick="onCardClick"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:foreground="?selectableItemBackground"
            android:backgroundTint="@color/darkRed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50pt"
                    android:layout_height="50pt"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bikerblack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:textSize="30sp"
                    android:text="Exit"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <include layout="@layout/bottom_menu"/>
</FrameLayout>